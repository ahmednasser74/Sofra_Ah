<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo"
        android:gravity="center"
        android:text="@string/change_password"
        android:textColor="@color/blue"
        android:textSize="30sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/restaurant_change_password_fragment_et_old_password"
        style="@style/margin_paddingSEB16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_60dp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:background="@drawable/shadow_gray_shape">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:fontFamily="@font/cairo"
            android:hint="@string/old_password"
            android:textColorHint="@color/blue" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/restaurant_change_password_fragment_et_new_password"
        style="@style/margin_paddingSEB16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_60dp"
        android:background="@drawable/shadow_gray_shape">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:fontFamily="@font/cairo"
            android:hint="@string/new_password"
            android:textColorHint="@color/blue" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/restaurant_change_password_fragment_et_confirmation_password"
        style="@style/margin_paddingSEB16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_60dp"
        android:background="@drawable/shadow_gray_shape">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:fontFamily="@font/cairo"
            android:hint="@string/confirmation_new_password"
            android:textColorHint="@color/blue" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/restaurant_change_password_fragment_btn_change_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginBottom="@dimen/dim_16dp"
        android:background="@drawable/gradient_btn_shape"
        android:fontFamily="@font/cairo"
        android:text="@string/change"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>