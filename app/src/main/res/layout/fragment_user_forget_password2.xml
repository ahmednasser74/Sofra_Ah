<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/restaurant_login_background_dish"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_20dp"
            android:fontFamily="@font/yehia_font"
            android:gravity="center_horizontal"
            android:text="Please Enter Verify Code"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_forget_password_fragment2_et_verify_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/album_dp_50"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dim_16dp"
            android:layout_marginTop="@dimen/dim_60dp"
            android:layout_marginEnd="@dimen/dim_16dp"
            android:background="@drawable/white_shape"
            android:hint="Verification Code"
            android:paddingStart="@dimen/dim_16dp"
            android:paddingEnd="@dimen/dim_16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_20dp"
            android:fontFamily="@font/yehia_font"
            android:gravity="center_horizontal"
            android:text="Please Enter New Password"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_forget_password_fragment2_et_password"
            style="@style/marginSET16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/album_dp_50"
            android:layout_gravity="center"
            android:background="@drawable/white_shape"
            android:hint="password"
            android:paddingStart="@dimen/dim_16dp"
            android:paddingEnd="@dimen/dim_16dp" />

        <EditText
            android:id="@+id/user_forget_password_fragment2_et_password_confirmation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/album_dp_50"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dim_16dp"
            android:layout_marginTop="@dimen/dim_16dp"
            android:layout_marginEnd="@dimen/dim_16dp"
            android:background="@drawable/white_shape"
            android:hint="password confirmation"
            android:paddingStart="@dimen/dim_16dp"
            android:paddingEnd="@dimen/dim_16dp" />

        <Button
            android:id="@+id/user_forget_password_fragment2_btn_send"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_30dp"
            android:background="@drawable/gradient_btn_shape"
            android:fontFamily="@font/yehia_font"
            android:text="send"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>