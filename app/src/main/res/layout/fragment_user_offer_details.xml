<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="@font/cairo"
        android:gravity="center"
        android:text="@string/offer_details"
        android:textColor="@color/blue"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="@dimen/dim_16dp"
        android:backgroundTint="@color/gray"
        app:cardCornerRadius="@dimen/dim_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_offer_details_fragment_tv_offer_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/dim_16dp"
                android:fontFamily="@font/cairo"
                android:gravity="center"
                android:text="Offer Name"
                android:textColor="@color/blue"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_offer_details_fragment_tv_offer_details"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/cairo"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dim_16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/cairo"
                    android:textStyle="bold"
                    android:text="@string/from_"
                    android:textColor="@color/blue"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/user_offer_details_fragment_tv_date_from"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/cairo"
                    android:textColor="@color/blue"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cairo"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/cairo"
                    android:text="@string/till_"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/user_offer_details_fragment_tv_date_till"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/cairo"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="25sp" />

            </LinearLayout>

            <Button
                android:id="@+id/user_offer_details_fragment_btn_get_offer"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dim_16dp"
                android:background="@drawable/gradient_btn_shape"
                android:fontFamily="@font/cairo"
                android:text="@string/get_now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>