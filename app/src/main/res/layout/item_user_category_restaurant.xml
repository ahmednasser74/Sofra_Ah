<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dim_8dp"
    android:layout_marginEnd="@dimen/dim_8dp"
    android:orientation="vertical">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/item_category_restaurant_img_restaurant_logo"
        android:layout_width="@dimen/dim_80dp"
        android:layout_height="@dimen/dim_80dp"
        android:layout_gravity="center"
        app:civ_border_color="@color/pink"
        app:civ_border_width="3dp"
        android:background="@null"
        app:civ_shadow="true"
        app:civ_shadow_color="#000"/>

    <TextView
        android:id="@+id/item_user_category_tv_category_name"
        android:layout_width="@dimen/album_dp_80"
        android:layout_height="@dimen/dim_40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Pizza" />

</LinearLayout>
