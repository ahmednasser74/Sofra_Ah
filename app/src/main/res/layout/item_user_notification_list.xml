<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_60dp"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_16dp"
        android:layout_marginBottom="@dimen/dim_4dp"
        app:cardCornerRadius="@dimen/dim_24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dim_16dp"
            android:layout_marginRight="@dimen/dim_16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_notification_img_ring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16dp"
                android:layout_marginLeft="@dimen/dim_16dp"
                android:background="@drawable/ic_black_notification" />

            <TextView
                android:id="@+id/item_notification_tv_title"
                android:layout_width="200dp"
                android:layout_height="@dimen/dim_20dp"
                android:layout_marginStart="@dimen/dim_8dp"
                android:layout_marginEnd="@dimen/dim_8dp"
                android:text="text of notification"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/item_notification_img_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_black_clock" />

            <TextView
                android:id="@+id/item_notification_tv_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_20dp"
                android:layout_marginStart="@dimen/dim_4dp"
                android:text="2min ago" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>