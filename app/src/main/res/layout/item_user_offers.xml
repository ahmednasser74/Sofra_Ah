<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_130dp"
                android:layout_marginStart="@dimen/dim_80dp"
                android:layout_marginTop="@dimen/dim_16dp"
                android:layout_marginEnd="@dimen/dim_16dp"
                android:layout_marginBottom="@dimen/dim_8dp"
                app:cardCornerRadius="@dimen/album_dp_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_user_offers_tv_offer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="get discount 10% for first order"
                        android:textColor="@color/blue"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/item_user_offers_btn_details"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dim_16dp"
                        android:background="@drawable/gradient_btn_shape"
                        android:gravity="center"
                        android:text="@string/details"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_user_offers_img_restaurant_logo"
                android:layout_width="@dimen/dim_100dp"
                android:layout_height="@dimen/dim_120dp"
                android:layout_marginStart="@dimen/dim_16dp"
                android:src="@drawable/logo" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
