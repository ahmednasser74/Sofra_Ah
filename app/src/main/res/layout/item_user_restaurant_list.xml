<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginStart="@dimen/dim_80dp"
            android:layout_marginTop="@dimen/dim_16dp"
            android:layout_marginEnd="@dimen/dim_16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="@dimen/dim_30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_40dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingTop="@dimen/dim_16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginEnd="@dimen/dim_16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_restaurant_list_tv_restaurant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/item_restaurant_list_img_opened"
                            android:layout_width="@dimen/dim_16dp"
                            android:layout_height="@dimen/dim_16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/dim_4dp" />

                        <TextView
                            android:id="@+id/item_restaurant_list_tv_opened"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#9A5A5959" />
                    </LinearLayout>
                </RelativeLayout>

                <RatingBar
                    android:id="@+id/item_restaurant_list_rb_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:isIndicator="true"
                    android:numStars="4"
                    android:scaleX=".9"
                    android:scaleY=".7" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Minimum Order : "
                        android:textColor="#9A5A5959" />

                    <TextView
                        android:id="@+id/item_restaurant_list_tv_minimum_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textColor="#9A5A5959" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delivery Cost : "
                        android:textColor="#9A5A5959" />

                    <TextView
                        android:id="@+id/item_restaurant_list_tv_delivery_fees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#9A5A5959" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_restaurant_list_img_restaurant_logo"
        android:layout_width="@dimen/dim_100dp"
        android:layout_height="@dimen/dim_120dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dim_16dp"
        android:paddingTop="@dimen/dim_16dp"
        app:civ_border_color="@color/gray"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10" />

</RelativeLayout>
