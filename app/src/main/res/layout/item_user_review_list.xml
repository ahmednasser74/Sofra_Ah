<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_80dp"
    android:layout_marginStart="@dimen/dim_16dp"
    android:layout_marginTop="@dimen/dim_16dp"
    android:layout_marginEnd="@dimen/dim_16dp"
    android:layout_marginBottom="@dimen/dim_4dp"
    app:cardCornerRadius="@dimen/dim_24dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_review_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_16dp"
            android:layout_marginTop="@dimen/dim_8dp"
            android:layout_marginEnd="@dimen/dim_16dp"
            android:text="ahmed" />

        <TextView
            android:id="@+id/item_review_tv_review_description"
            android:layout_width="@dimen/dim_200dp"
            android:layout_height="match_parent"
            android:layout_below="@id/item_review_tv_name"
            android:layout_marginStart="@dimen/dim_30dp"
            android:layout_marginEnd="@dimen/dim_16dp"
            android:layout_marginBottom="@dimen/dim_8dp"
            android:text="review description"
            android:textColor="@color/blue" />

        <ImageView
            android:id="@+id/item_review_img_emoji_review"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dim_16dp"
            android:src="@drawable/ic_pink_emoji_laugh" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>

